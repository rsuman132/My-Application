<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_1ssp"
    app:cardCornerRadius="@dimen/_5ssp"
    android:layout_marginHorizontal="@dimen/_3ssp"
    android:layout_marginVertical="@dimen/_1ssp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_10ssp"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/language_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/english"
                android:textColor="@color/green"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_5ssp" />

            <TextView
                android:id="@+id/language_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/english"
                android:textColor="@color/green" />

        </LinearLayout>
        <ImageView
            android:id="@+id/check_mark_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_checkmark"
            android:layout_gravity="center"
            android:visibility="invisible"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
